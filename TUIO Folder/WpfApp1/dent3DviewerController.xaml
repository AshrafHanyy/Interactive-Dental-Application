<UserControl x:Class="WpfApp1.dent3DviewerController"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helix="http://helix-toolkit.org/wpf"
        Height="450" Width="800">
    <Grid>
        <!-- HelixViewport3D control with the name "viewport" -->
        <helix:HelixViewport3D x:Name="viewport">
            <!-- Add default lighting for the 3D model -->
            <helix:DefaultLights />

            <!-- ModelVisual3D with rotation transform -->
            <ModelVisual3D x:Name="modelVisual">
                <ModelVisual3D.Transform>
                    <RotateTransform3D>
                        <RotateTransform3D.Rotation>
                            <AxisAngleRotation3D x:Name="rotation" Axis="0,1,0" Angle="0"/>
                        </RotateTransform3D.Rotation>
                    </RotateTransform3D>
                </ModelVisual3D.Transform>
            </ModelVisual3D>
        </helix:HelixViewport3D>
    </Grid>
</UserControl>
